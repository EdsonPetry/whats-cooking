{{! GET RECENT POSTS? }}

<div>
    <h2 class="text-center">Recipes of the day</h2>
</div>

<div class="row main-recipes">
    {{#each recipes as |image|}}
    <div id="recipes" class="column">
        <div class="card"><img src={{image}} alt="" srcset="" /></div>
    </div>
    {{/each}}
</div>

<section>
    <h3>FOODIE REVIEW VIDEO</h3>
    {{! video? }}
</section>

<section class="about">
    <div class="about-box">
        <h3>What's cookin' good lookin'? </h3>
        <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Incidunt sint
            harum animi cupiditate esse iure aut id debitis nam possimus illo, itaque
            repellendus ullam, ipsum quas! Fugiat porro quas hic?</p>
    </div>
</section>

{{#if username}}
<a href='/newpost'>Make a post</a>
{{/if}}

<section id="posts">
    {{#each post}}
    <div id="post"><a class="postlink" href="/thread/{{this.id}}">
        <div id="postheader">
            <h5>Category:{{this.category.category_name}}</h5>
            <h3>{{this.title}}</h3>
            <h5>posted by: {{this.user.username}}</h5>
        </div>
        <p>{{this.content}}</p>
        <div id="postfooter">
            <h5>posted on: {{this.createdAt}}</h5>
            <h5>updated on: {{this.updatedAt}}</h5>
        </a></div>
        {{/each}}
</section>